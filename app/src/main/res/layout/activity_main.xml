<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">



    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_view"
                android:layout_width="match_parent"
                android:layout_height="404dp"
                android:layout_weight="10" />

            <TextView
                android:id="@+id/length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:gravity="center"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <Button
                    android:id="@+id/pick_img_bt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButton"
                    android:text="Image"/>
                <Switch
                    android:id="@+id/switch_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Image" />
                <Switch
                    android:id="@+id/switch_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Black bg" />
                <Switch
                    android:id="@+id/switch_curve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Curve" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="width:"/>
                <SeekBar
                    android:id="@+id/seek_width"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:max="1500"
                    android:progress="460"/>
                <TextView
                    android:id="@+id/view_width"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="480"/>
                <!--
                <Button
                    android:id="@+id/default_width_bt"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="Reset"
                    android:textSize="10sp"/>
                    -->
                <ImageButton
                    android:id="@+id/default_width_bt"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/reset"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/select_curve_pt_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorButton"
                    android:text="Curve point"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="tol.: "/>
                <SeekBar
                    android:id="@+id/seekTolerance"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:max="25"
                    android:progress="15"/>
            </LinearLayout>



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_margin="10dp"
                android:background="@color/colorBar"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="2dp"
                    android:text="Lines"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="5dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number:"/>
                <SeekBar
                    android:id="@+id/seek_nb_lines"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:max="10"
                    android:progress="2"
                    />
                <TextView
                    android:id="@+id/view_lines_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Switch
                    android:id="@+id/switch_lines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Angle:" />
                <SeekBar
                    android:id="@+id/seek_angle_lines"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:max="10"
                    android:progress="2"
                    />
                <TextView
                    android:id="@+id/view_lines_angle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"/>
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_margin="10dp"
                android:background="@color/colorBar"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Switch
                    android:id="@+id/switch_dots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:checked="true"
                    android:text="Dots"/>
                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <RadioButton
                        android:id="@+id/radio_add_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"/>
                    <RadioButton
                        android:id="@+id/radio_none_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="None"/>
                    <RadioButton
                        android:id="@+id/radio_suppr_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suppr"/>
                </RadioGroup>
                <!--
                <Button
                    android:id="@+id/auto_dots_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="10sp"
                    android:textColor="@color/colorButton"
                    android:text="Automatic"/>
                    -->
                <ImageButton
                    android:id="@+id/suppr_all_dots"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/suppr_all_dots"/>
                <ImageButton
                    android:id="@+id/auto_dots_bt"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/auto_dots"/>
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_margin="10dp"
                android:background="@color/colorBar"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Switch
                    android:id="@+id/switch_ref"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Ref"/>
                <Button
                    android:id="@+id/length_ref_begin_bt"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:textSize="10sp"
                    android:textColor="@color/colorButton"
                    android:text="start"/>
                <Button
                    android:id="@+id/length_ref_end_bt"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:textSize="10sp"
                    android:textColor="@color/colorButton"
                    android:text="end"/>
                <EditText
                    android:id="@+id/editTextRefLenght"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Ref lenght"/>
                <!--- <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </Spinner> -->
                <EditText
                    android:id="@+id/editTextRefUnit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:hint="unit" />


                <ImageButton
                    android:id="@+id/keyboard_down_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/keyboard_down"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp" />




        </LinearLayout>
    </ScrollView>




</android.support.constraint.ConstraintLayout>